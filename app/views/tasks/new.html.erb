<div class="post-content">
  <%= render "shared/left-box"%>
  <div class="post-box">
    <div class="page-title">タスクの新規作成</div>

    <%= form_with model: @task, local: true do |f|%>

     <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :name, "タスク名" %><br />
      <%= f.text_field :name, class:"form-control" %>
    </div>

    <div class="field">
      <%= f.label :goal, "目標" %><br />
      <%= f.text_area :goal, class: "form_text form-control" %>
    </div>

    <div class="actions  form_btn">
      <%= f.submit "作成する", class: "btn btn-primary"  %>
    </div>
    <% end %>

  </div>
</div>