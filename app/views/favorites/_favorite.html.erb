                <% if task.user.id != current_user.id %>
                    <% if task.favorited_by?(current_user) %>
                        <%=link_to task_favorites_path(task.id), class:"favorited-btn",method: :delete, remote: true do %>
                        <i class="fas fa-heart"></i>
                        <%= task.favorites.count %>
                        <% end %>
                    <% else %>
                        <%=link_to task_favorites_path(task.id), class:"favorite-btn",method: :post, remote: true do %>
                        <i class="fas fa-heart"></i>
                        <%= task.favorites.count %>
                        <% end %>
                    <% end %>
                <% else %>
                    <% if task.favorites.count > 0 %>
                        <p class="favorited-btn"><span><i class="fas fa-heart"></i></span>
                        <%= task.favorites.count %></p>
                    <% else %>
                        <p class="favorite-btn"><span><i class="fas fa-heart"></i></span>
                        <%= task.favorites.count %></p>
                    <% end %>
                <% end %>