<div class="post-content">
  <%= render "shared/left-box"%>
  <div class="post-box">
    <div class="page-title">カテゴリーの新規作成</div>

    <%= form_with model: [@task, @category], local: true do |f|%>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :name, "カテゴリー名" %><br />
      <%= f.text_field :name, class:"form-control" %>
    </div>

    <div class="field">
      <%= f.label :item, "使用する教材等があれば記入" %><br />
      <%= f.text_area :item, class: "form_text form-control" %>
    </div>

    <div class="actions  form_btn">
      <%= f.submit "作成する", class: "btn btn-primary"  %>
    </div>
    <% end %>

  </div>
</div>